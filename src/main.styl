*
  border-sizing: border-box

:root
  font-family: "Lucida Console", monospace
  font-size: 20px
  background: #333
  color: #333

html
body
  padding: 0
  margin: 0
  width: 100%
  height: 100%

#app
  width: 100%
  height: 100%
  
  #console
    display: block
    position: fixed
    left: 0
    bottom: 0
    width: 100%
    opacity: 0.5
    background: #fff
    padding: 0.5em
  
  table.puzzle
    border-collapse: collapse
    border-spacing: 0
    
    .non-header
    .row-header
    .col-header
      background: #ccc
      display: none
    
    td
      border: 1px solid #fff
      padding: 10px
      background: #c33
